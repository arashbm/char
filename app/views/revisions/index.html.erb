<div class="page-header">
  <h1><%=t '.title', title: link_to(@post.title, @post) %> <span class="badge"><%= @revisions.count %></span></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t '.index' %></th>
      <th><%= t '.who' %></th>
      <th><%= t '.event' %></th>
      <th><%= t '.created_at' %></th>
    </tr>
  </thead>
  <tbody>
    <% @revisions.each do |revision| %>
      <tr>
        <td><%= link_to "#{revision.id} (#{revision.index})", post_revision_path(@post, revision.id) %></td>
        <td><%= User.find(revision.originator).name if revision.originator %></td>
        <td><%= revision.event %></td>
        <td><%= l revision.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
