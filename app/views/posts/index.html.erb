<%- model_class = Post -%>
<div class="page-header">
  <h1><%= t '.title' %>
    <%= link_to t("helpers.links.new_html"), new_post_path, :class => 'btn btn-primary' %>
  </h1>
</div>


<div class='span6 offset3'>
  <%= content_tag_for :div, @posts do |post|  %>
    <h2><%= link_to post.title, post_path(post) %> <small><%= post.user.try(:name) %></small></h2>

    <%= content_tag :div, truncate(post.body, length: 500, separator: "\n"), data: { markdown: true } %>

    <%= post_footer(post) %>
  <% end %>
</div>
